
@model SabraMedicalCenter.Areas.Student.Models.StudentDTO

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Student Login Form</title>




    <link href="~/Content/fontcss/css/style.css" rel="stylesheet" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>

</head>

<body>
    <div class="body"></div>
    <div class="grad"></div>
    <div class="header">
        <div><b>Student</b><span>Login</span></div>
    </div>
    <br>
    <div class="login">
        @using (Html.BeginForm("Logingstudent", "McHomeHandle", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

           
          
                <font color="red"><h3><b>@ViewBag.Error</b></h3></font>

                
                            <form role="form">
                                <fieldset>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", placeholder = "User Name/Nic No" } })
                                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                      
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password/Faculty" } })
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                       
                                    </div>
                                   
                                    <!-- Change this to a button or input when using this as a form -->
                                    <input type="submit" value="Login" class="btn btn-primary" />
                                  
                                </fieldset>
                            </form>
                       


        }
   
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>


</body>
</html>
