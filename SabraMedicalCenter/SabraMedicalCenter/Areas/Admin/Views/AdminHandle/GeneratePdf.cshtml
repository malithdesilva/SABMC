@model IEnumerable<SabraMedicalCenter.Areas.Admin.Models.pdf>

@{
    ViewBag.Title = "GeneratePdf";
    Layout = "~/Views/Shared/_pdfLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/scripts/bootstrap.min.js"></script>
<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>
<div class="row">
    <img src="~/Images/sadaka-logo.png" class="col-lg-offset-4" style="margin-left:350px;" />
    
</div>
<h2 style="margin-left:100px;">Medical Center Sabaragamuwa University of Sri Lanka</h2>
<hr />
<br />
<h2>Medicine Request on @ViewBag.today</h2>

<div class="row invoice-info">
    <div class="col-sm-4 invoice-col">
        From
        <address>
            <strong>Medical Center</strong><br>
            Sabaragamuwa University of Sri Lanka<br>
            Belihuloya<br>
            Phone: (804) 123-5432<br />
            Email: medicalcenter.gmail.com
        </address>
    </div><!-- /.col -->
    <div class="col-sm-4 invoice-col">
        To
        <address>
            <strong>Supply Branch</strong><br>
            Sabaragamuwa University of Sri Lanka<br>
            Belihuloya<br>
            Phone: (555) 539-1037<br />
            Email: supply.doe@example.com
        </address>
    </div><!-- /.col -->
    <div class="col-sm-4 invoice-col">
        <b>Invoice #007612</b><br />
        <br />
        <b>Order ID:</b> 4F3S8J<br />
        
    </div><!-- /.col -->
</div>
<table class="table table-bordered">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.DrugName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DrugQty)
        </th>


    </tr>

    @foreach (var item in Model)
    {
        <tr class="info">
            
            <td>
                @Html.DisplayFor(modelItem => item.DrugName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrugQty)
            </td>

        </tr>
    }

</table>


